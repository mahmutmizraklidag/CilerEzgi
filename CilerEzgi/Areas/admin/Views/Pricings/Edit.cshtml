@model Pricing

@{
    ViewData["Title"] = "Paket Düzenle";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Paket Düzenle</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label fw-semibold"></label>
                        <input asp-for="Title" class="form-control" placeholder="Paket başlığı" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="ParentId" class="form-label fw-semibold"></label>
                        <select asp-for="ParentId" class="form-select" asp-items="ViewBag.ParentId">
                            <option value="0">Ana Faaliyet Alanı</option>
                        </select>
                        <span asp-validation-for="ParentId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-semibold"></label>
                        <input asp-for="Price" class="form-control" placeholder="Fiyat" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea id="AboutEditor" asp-for="Description" class="form-control" rows="4" placeholder="Paket içeriğini düzenleyin"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                  
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-warning text-dark px-4">
                        <i class="bi bi-save me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Yeni görsel önizleme
        document.getElementById("imageInput").addEventListener("change", function (event) {
            const [file] = event.target.files;
            const preview = document.getElementById("previewImage");
            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.classList.remove("d-none");
            } else {
                preview.classList.add("d-none");
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const editor = new Jodit('#AboutEditor', {
                height: 400,
                maxLength: 10000
            });
        });
        document.addEventListener("DOMContentLoaded", function () {
            const editor = new Jodit('#AboutEditor2', {
                height: 400,
                maxLength: 10000
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
