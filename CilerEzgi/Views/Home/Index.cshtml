@model HomePageViewModel
@{
    ViewData["Title"] = "Anasayfa";
}

<!-- ABOUT US SECTION -->
<section class="aboutus_section" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                <div class="aboutus_image">
                    <figure class="mb-0"><img src="./img/@Model.About.Image" alt="" class="img-fluid"></figure>
                </div>
              @*   <figure class="aboutus_top_shape left_shape mb-0">
                    <img src="./assets/images/aboutus_top_shape.png" alt="" class="img-fluid">
                </figure>
                <figure class="aboutus_bottom_shape left_shape mb-0">
                    <img src="./assets/images/aboutus_bottom_shape.png" alt="" class="img-fluid">
                </figure> *@
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12" data-aos="fade-right">
                <div class="aboutus_content">
                    <h5>@Model.About.Title</h5>
                    @Html.Raw(Model.About.Description)
                    <div class="btn_wrapper">
                        <a href="#contact" class="text-decoration-none get_started_btn">Hadi Başlayalım</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- OUR SERVICES SECTION -->
<section class="services_section" id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="services_content">
                    <h5>Çalışma Alanları</h5>
                    <h2>Yoga ve Bütünsel Egzersiz</h2>
                    <p>Beden, zihin ve nefesi bir araya getiren yoga ve bütünsel egzersiz çalışmalarıyla dengeli ve farkındalıklı bir yaşam alanı.</p>
                </div>
            </div>
        </div>

        <div class="row" data-aos="fade-up">

            @foreach(var service in Model.Services)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                    <div class="services_box_content">
                        <div class="services_box_upper_portion">
                            <figure class="mb-0">
                                <img src="./img/@service.Image" alt="" class="img-fluid">
                            </figure>
                        </div>
                        <div class="services_box_lower_portion">
                            <h3>@service.Title</h3>
                            <p>@service.Description</p>
                            <div class="btn_wrapper">
                                <a href="#services" class="text-decoration-none">
                                    <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            

            
        </div>

      @*   <figure class="services_left_shape left_shape mb-0">
            <img src="./assets/images/services_left_shape.png" alt="" class="img-fluid">
        </figure> *@
    </div>
</section>



<!-- OUR SPECIALTIES SECTION -->
