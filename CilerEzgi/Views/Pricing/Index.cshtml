    <section class="pricing_plans_section" style="padding: 0px 0 130px !important;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="pricing_plans_content">
                        <h5>Paketler</h5>
                        @* <h2>@Model.MainPricing.Title Paketleri</h2> *@
                        <p>Size uygun olan paketi seçerek hemen başlayabilirsiniz.</p>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center" data-aos="fade-up">

                @if (Model == null || Model.SubPricings == null || !Model.SubPricings.Any())
                {
                    <div class="alert alert-warning">
                        Bu kategoriye ait henüz bir paket tanımlanmamış.
                    </div>
                }
                else
                {
                    // Alt Paketleri Fiyata Göre Sırala (En yüksek fiyatlı varsayılan olsun diye)
                    var sortedPackages = Model.SubPricings.OrderByDescending(x =>
                    {
                        double p;
                        string cleanPrice = x.Price?.Replace("₺", "").Trim() ?? "0";
                        return double.TryParse(cleanPrice, out p) ? p : 0;
                    }).ToList();

                    // Tek bir kart oluşturuyoruz (Çünkü zaten detay sayfasındayız)
                    <div class="col-lg-5 col-md-6 col-sm-12">
                        <div class="pricing_plans_box_content">

                            <div class="pricing_plans_box_upper_portion">
                                <figure class="pricing_plans_image mb-0">
                                    <img src="@Url.Content("~/assets/images/pricing_plan_1.png")" alt="" class="img-fluid">
                                </figure>
                                <div class="pricing_plans_box_image_content">
                                    <figure class="mb-0">
                                        <img src="@Url.Content("~/assets/images/pricing_plan_icon_3.png")" alt="" class="img-fluid">
                                    </figure>
                                </div>
                            </div>

                            <div class="pricing_plans_box_lower_portion text-center">

                                <h3 class="mb-3">@Model.MainPricing.Title</h3>

                                <ul class="nav nav-tabs justify-content-center border-0 mb-3" id="tab-pricing" role="tablist" style="background-color: #f9f9f9; border-radius: 30px; padding: 5px; display: inline-flex;">
                                    @for (int i = 0; i < sortedPackages.Count; i++)
                                    {
                                        var item = sortedPackages[i];
                                        var isActive = i == 0 ? "active" : "";

                                        <li class="nav-item" style="margin:0;">
                                            <a class="nav-link @isActive"
                                               id="tab-btn-@item.Id"
                                               data-toggle="tab"
                                               href="#content-@item.Id"
                                               role="tab"
                                               aria-controls="content-@item.Id"
                                               aria-selected="@(i == 0 ? "true" : "false")"
                                               style="border-radius: 25px; cursor: pointer; display: flex; align-items: center; gap: 8px;">

                                                <span style="font-weight: 600;">@item.Title</span>

                                                <span style="opacity: 0.5;">|</span>

                                                <span style="font-size: 0.9em; font-weight: 500;">₺@item.Price</span>
                                            </a>
                                        </li>
                                    }
                                </ul>

                                <div class="tab-content" id="tab-content-pricing">
                                    @for (int i = 0; i < sortedPackages.Count; i++)
                                    {
                                        var item = sortedPackages[i];
                                        var isActive = i == 0 ? "show active" : "";

                                        <div class="tab-pane fade @isActive" id="content-@item.Id" role="tabpanel" aria-labelledby="tab-btn-@item.Id">

                                            <div class="description-area mb-2">
                                                @Html.Raw(item.Description)
                                            </div>

                                            <div class="pricing_plans_span_wrapper">
                                                <span class="price">₺@item.Price</span>
                                            </div>

                                            <div class="btn_wrapper mt-3">
                                                <a class="enroll_now_btn text-decoration-none" asp-controller="Card" asp-action="Index" asp-route-id="@item.Id">
                                                    Satın Al
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section class="subscribe_section">
